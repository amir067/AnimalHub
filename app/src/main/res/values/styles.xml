<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ThemeColorTwo</item>
        <item name="colorPrimaryDark">@color/ThemeColorOne</item>
        <item name="colorAccent">@color/ThemeColorThree</item>
    </style>

    <style name="AppThemeNew" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#4DD0E1</item>
        <item name="colorPrimaryDark">#4FC3F7</item>
        <item name="colorAccent">@color/ThemeColorOne</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">true</item>

    </style>

    <style name="AppThemeRegister" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimaryDark">#009688</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">true</item>

    </style>

    <!-- Base application theme. -->
    <style name="LoginActivityTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/FDColorA1</item>
        <item name="colorPrimaryDark">@color/FDColorA2</item>
        <item name="colorAccent">@color/FDColorC1</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="HomeActivityTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/FDColorA1</item>
        <item name="colorPrimaryDark">@color/FDColorA2</item>
        <item name="colorAccent">@color/FDColorC1</item>
    </style>

    <!-- Base application theme. -->
    <style name="HomeActivityThemeNew" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyRounded.MaterialComponents.MaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.CustomDialog.Rounded
        </item>
        <item name="colorSurface">@color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CustomDialog.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>


    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">

    </style>

    <style name="LoginActivityTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppFullScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="FoodDetailScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="circle">
        <item name="cornerSize">50%</item>
    </style>




    <style name="cardview">

        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/spacing_xmedium</item>
    </style>


</resources>