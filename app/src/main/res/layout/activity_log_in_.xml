<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.auth.LogInActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/style"
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:background="@drawable/styl_login" />

        <TextView
        android:id="@+id/textlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:fontFamily="@font/poppins2"
        android:textColor="#1061FF"
        android:layout_centerHorizontal="true"
        android:text="Login"
        android:layout_below="@+id/style"/>
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/poppins"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Enter your username and password"
        android:layout_below="@+id/textlogin"/>
    <ImageView
        android:id="@+id/img_animal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/img_animal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:background="@drawable/styl_email"
        android:layout_below="@+id/img_animal"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:paddingLeft="65dp"
        android:paddingRight="10dp"
        android:fontFamily="@font/poppins"
        android:textColor="#000000"
        android:hint="Email"
        />
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:background="@drawable/bg_pass"
        android:layout_below="@+id/email"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:paddingLeft="65dp"
        android:paddingRight="10dp"
        android:fontFamily="@font/poppins"
        android:textColor="#000000"
        android:hint="Password" />
        <TextView
            android:id="@+id/textforget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins"
            android:textColor="#000000"
            android:text="Forget Password?"
            android:layout_below="@+id/password"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            />
    <android.widget.Button
        android:id="@+id/log_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_btn"
        android:textSize="25dp"
        android:fontFamily="@font/poppins2"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:layout_below="@id/password"
        android:text="Login"
        />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_below="@+id/log_in"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="20dp">
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins"
        android:textColor="#000000"
        android:text="Don't have an account?"
        />
    <TextView
        android:id="@+id/textregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins"
        android:textColor="#1061FF"
        android:layout_toRightOf="@+id/text1"
        android:text="Register Now!" />
</RelativeLayout>

    </RelativeLayout>



</ScrollView>